<div class="container">
  <h1>Bienvenido {{user.name}}</h1>
  <p>Email: {{user.email}}</p>
  <p>Edad: {{user.age}}</p>
  <p>{{message}}</p>
  <h2 style="width: 100%">Productos</h2>
  {{#each products}}
    
      <div class="tarjetas">
        <a href="/api/products/{{this.id}}">
            <p>{{this.title}}</p>
            <p>{{this.description}}</p>
            <p>{{this.code}}</p>
            <p>${{this.price}}</p>
            <p>{{this.stock}}</p>
            <p>{{this.category}}</p>
            <p>{{this.thumbnail}}</p>
        </a>
      </div>
    
  {{/each}}
</div>